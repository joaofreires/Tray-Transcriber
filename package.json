{
  "name": "tray-transcriber",
  "version": "0.1.0",
  "description": "System tray whisperx transcriber",
  "author": "Joao",
  "main": "dist-ts/main.js",
  "type": "module",
  "scripts": {
    "dev": "cross-env CHOKIDAR_USEPOLLING=true CHOKIDAR_INTERVAL=1000 NODE_ENV=development vite",
    "dev:electron": "npm run build && cross-env NODE_ENV=development VITE_DEV_SERVER_URL=http://localhost:5173 electron . --inspect=9229",
    "build": "tsc -p tsconfig.json",
    "build:renderer": "vite build",
    "build:app": "npm run build && npm run build:renderer",
    "dev:main": "tsc -w -p tsconfig.json",
    "dev:all": "cross-env CHOKIDAR_USEPOLLING=true CHOKIDAR_INTERVAL=1000 concurrently -k \"npm:dev\" \"npm:dev:main\" \"wait-on http://localhost:5173 && npm run dev:electron\"",
    "test": "vitest",
    "start": "npm run build:app && node scripts/start.cjs",
    "postinstall": "npm rebuild @tailwindcss/oxide || true",
    "bundle:prep": "node scripts/bundle_prepare.cjs",
    "dist:linux": "npm run bundle:prep && electron-builder --linux AppImage",
    "dist:mac": "npm run bundle:prep && electron-builder --mac"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.2.1",
    "node-abi": "^4.26.0",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.2.1",
    "@testing-library/react": "^14.0.0",
    "@types/node": "^24.10.13",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.24",
    "concurrently": "^8.0.0",
    "cross-env": "^7.0.3",
    "daisyui": "^5.5.19",
    "electron": "^29.4.0",
    "electron-builder": "^24.13.3",
    "electron-reload": "^2.0.0-alpha.1",
    "jsdom": "^22.0.0",
    "nodemon": "^3.0.2",
    "postcss": "^8.5.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^4.2.1",
    "typescript": "^5.9.3",
    "vite": "^5.2.0",
    "vitest": "^1.4.0",
    "wait-on": "^8.0.0"
  },
  "optionalDependencies": {
    "robotjs": "^0.6.0",
    "uiohook-napi": "^1.4.4"
  },
  "build": {
    "appId": "com.tray.transcriber",
    "productName": "TrayTranscriber",
    "files": [
      "**/*"
    ],
    "extraResources": [
      {
        "from": "bundle/python",
        "to": "python"
      },
      {
        "from": "bundle/ffmpeg",
        "to": "ffmpeg"
      },
      {
        "from": "python",
        "to": "worker"
      }
    ],
    "linux": {
      "target": [
        "AppImage"
      ]
    },
    "mac": {
      "target": [
        "dmg"
      ]
    }
  }
}
