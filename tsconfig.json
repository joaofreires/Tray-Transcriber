{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Node",
    "lib": ["ES2022", "DOM"],
    "outDir": "dist-ts",
    "rootDir": ".",
    "strict": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "esModuleInterop": true
  },
  "include": [
    "main.ts",
    "src/**/*.ts",
    "vite-env.d.ts"
  ]
}
